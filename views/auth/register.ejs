<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header.ejs') %>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-info text-white text-center">
            <h3>Create an Account</h3>
          </div>
          <div class="card-body p-4">
            <% if (typeof errors !== 'undefined') { %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
            
            <form action="/register" method="POST">
              <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <div class="form-text">We'll never share your email with anyone else.</div>
              </div>
              
              <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone">
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              
              <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="password2" name="password2" required>
              </div>
              
              <div class="mb-3">
                <label for="bloodGroup" class="form-label">Blood Group (Optional)</label>
                <select class="form-select" id="bloodGroup" name="bloodGroup">
                  <option value="">Select Blood Group</option>
                  <option value="A+">A+</option>
                  <option value="A-">A-</option>
                  <option value="B+">B+</option>
                  <option value="B-">B-</option>
                  <option value="AB+">AB+</option>
                  <option value="AB-">AB-</option>
                  <option value="O+">O+</option>
                  <option value="O-">O-</option>
                </select>
              </div>
              
              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="termsCheck" required>
                <label class="form-check-label" for="termsCheck">I agree to the <a href="/terms">terms and conditions</a>.</label>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-info btn-lg">Register</button>
              </div>
            </form>
            
            <div class="mt-4 text-center">
              <p>Already have an account? <a href="/auth/login" class="text-decoration-none">Login here</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer.ejs') %>
  
  
</body>
</html>